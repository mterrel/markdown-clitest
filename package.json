{
  "name": "doctest",
  "version": "0.0.1",
  "description": "Automated testing of command line examples in markdown files",
  "main": "dist/src/index.js",
  "bin": {
    "doctest": "bin/doctest"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:watch": "yarn run clean; yarn run _build:watch",
    "_build:watch": "tsc -w -p tsconfig.json",
    "clean": "rm -rf dist",
    "lint": "tslint --project .",
    "lint-and-fix": "tslint --project . --fix",
    "prepare": "yarn run build",
    "prepush": "yarn run lint",
    "pretest": "yarn run build",
    "test": "mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/unboundedsystems/doctest.git"
  },
  "author": "Unbounded Systems",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://gitlab.com/unboundedsystems/doctest/issues"
  },
  "homepage": "https://gitlab.com/unboundedsystems/doctest#README",
  "dependencies": {
    "@adpt/utils": "^0.0.3",
    "chalk": "^2.4.1",
    "commander": "^2.20.0",
    "debug": "^4.1.0",
    "fs-extra": "^6.0.1",
    "json5": "^2.1.0",
    "source-map-support": "^0.5.6",
    "ts-custom-error": "^3.1.1",
    "tslib": "^1.9.2",
    "type-ops": "^3.0.1"
  },
  "devDependencies": {
    "@types/debug": "^0.0.31",
    "@types/execa": "^0.9.0",
    "@types/fs-extra": "^5.0.3",
    "@types/json5": "^0.0.30",
    "@types/mocha": "^5.2.1",
    "@types/node": "^10.11.7",
    "execa": "^0.10.0",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "should": "^13.2.3",
    "stdout-stderr": "^0.1.9",
    "string-to-stream": "^2.0.0",
    "tslint": "^5.10.0",
    "typescript": "^3.0.3"
  }
}
